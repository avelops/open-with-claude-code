Windows Registry Editor Version 5.00

; Add "Open with Claude Code" to folder context menu
[HKEY_CLASSES_ROOT\Directory\shell\OpenWithClaudeCode]
@="Open with Claude Code"
"Icon"="C:\\Users\\Lital\\Desktop\\Code\\open_with_claude_code\\claude.ico,0"
"Position"="Top"

[HKEY_CLASSES_ROOT\Directory\shell\OpenWithClaudeCode\command]
@="cmd.exe /c \"cd /d \"%1\" && claude\""

